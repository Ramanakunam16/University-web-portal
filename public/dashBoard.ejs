<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Pragma" content="no-cache">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Document</title>




    <style>
        body {
            background-image: linear-gradient(90deg,
                    rgb(180, 167, 141) 20%,
                    rgb(119, 95, 95));
        }

        .header {
            width: 100%;
            max-width: 200%;
            height: 80px;
            background-color: #f8fafa;
            display: flex;
            align-items: right;

            justify-content: space-between;
            /* margin-bottom: 50px; */
            border-radius: 20px;
        }

        #logo {
            width: 70px;
            height: 70px;
            margin: 2px 2px;
            margin-left: 6%;
            border-radius: 50px;
            position: absolute;
            left: 2%;
            top: 1.2%;
        }


        #avatar {
            align-items: center;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-top: 15px;
            object-fit: cover;
        }



        span {
            margin-top: 0px;
            margin-right: 60px;

            color: black;
        }

        .navbar a {
            float: left;

            color: black;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
        }

        .navbar :hover {
            background-color: aliceblue;
            color: black;
            text-decoration: none;
            border-radius: 10px;

        }

        /* 
        #line {
            display: flex;
            border-left: 2px solid #e06907;
            height: 40px;
            align-items: center;

            margin: 1% 0% 4% 0%;
        } */


        .dropbtn {

            border: none;
            cursor: pointer;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 70%;
            background-color: #d8a371;
            min-width: 250px;
            /* border: 2px solid black; */
            border-radius: 20px;
            /* box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2); */
            z-index: 1;
        }

        .dropdown-content a {
            color: rgb(255, 254, 254);
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 18px;



        }

        .dropdown-content a:hover {
            color: #504e4e;
        }

        .active {
            background-color: rgb(221, 199, 127);
            color: white;
        }

        .hidden {
            display: none;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(3px);
            z-index: 0;

        }

        h1 {
            color: #110c03;
            font-size: 3em;
            text-align: center;
            filter: drop-shadow(0 0 10px #e0b2a9e6);
        }

        @media (max-width:768px) {
            .header {
                display: flex;
                justify-content: space-between;
            }
        }
    </style>
</head>

<body>
    <div class="header">
        <div>
            <a href="/dashBoard"> <img id="logo" src="ambedkar-university-sklm.jpg">
            </a>
        </div>
        <!-- <div id="line"></div> -->
        <div class="dropdown">
            <% if (profilePicData) { %>
                <img src="data:<%= profilePicMimeType %>;base64,<%= profilePicData.toString('base64') %>" id="avatar"
                    alt="profile pic">
                <% } else { %>
                    <img src="avatar.jpg" id="avatar" alt="">
                    <% } %>

                        <button style="width:30px; margin-right: 47px;" class="dropdown-btn">
                            <span>ðŸ”» </span>
                        </button>

                        <div class="dropdown-content">
                            <a href="/settings" class="settings">âš™ Platform settings</a>
                            <a href="/logout">â†© Sign Out</a>

                        </div>
        </div>
    </div>
    <div class="overlay hidden"></div>

    <h1>Welcome to Dr.Brau Campus connect
        <%= username%>
    </h1>


    <script>

        const dropdownbtn = document.querySelector(".dropdown-btn")
        const overlay = document.querySelector(".overlay")

        let dropdown = document.getElementsByClassName("dropdown-btn");
        let i;

        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }

        dropdownbtn.addEventListener("click", () => {
            console.log(dropdownbtn);
            overlay.classList.remove("hidden");
        })




        overlay.addEventListener("click", () => {
            console.log("clicked");
            document.querySelector(".dropdown-content").style.display = "none";

            overlay.classList.add("hidden");
        })


    </script>

</body>

</html>