    <div class="container">
        <div class="box-1">
            <button class="profileSettings ">âš™ Profile Settings</button>
            <button class="libReserve">ðŸ“š Library Reservations</button>

        </div>
        <div class="overlay hidden"></div>
        <div class="form1 form2 form3 box-2 " id="box-2">


            <div class="form1" style="width: 30%">
                <h3>personal Info</h3>
                <form id="updateInfo" action="/updateInfo" method="post">
                    <div>
                        <label for="email">Update Your Email Id:</label>
                        <input type="email" id="email" name="email" value="<%= email %>" />

                        <!-- <button class="continue-button">Continue</button>  -->
                    </div>

                    <div>
                        <label for="uname">Change Your Username:</label>
                        <input type="text" id="uname" name="uname" value="<%= username%>">

                    </div>
                    <button type="submit">Update Profile</button>
                </form>
            </div>
            <div class="box-3">
                <div class="form3">

                    <% if (profilePicData) { %>
                        <form action="/updateProfilePic" method="post" enctype="multipart/form-data">
                            <img src="data:<%= profilePicMimeType %>;base64,<%= profilePicData.toString('base64') %>"
                                id="profilepic" alt="profile pic">

                            <h3>Profile Picture</h3>
                            <p>

                                For best results, use an square image at least 248px x 248px</p>
                            <label for="pic" class="piclabel">Change Picture</label>
                            <input type="file" id="pic" name="pic">
                            <button id="picSave" type="submit"
                                style="font-size: 18px;margin-top: 20px; margin-bottom: \50px;">Update</button>

                        </form>
                        <% } else { %>
                            <form action="/saveProfilePic" method="post" enctype="multipart/form-data">
                                <img src="avatar.jpg" id="profilepic" alt="">

                                <h3>Profile Picture</h3>
                                <p>

                                    For best results, use an square image at least 248px x 248px</p>
                                <label for="pic" class="piclabel">Upload Picture</label>
                                <input type="file" id="pic" name="pic">
                                <button id="picSave" type="submit"
                                    style="font-size: 18px;margin-top: 20px; margin-bottom: \50px;">Save</button>
                            </form>
                            <% } %>



                </div>

            </div>
            <div class="form2" style="width: 30%;margin-top: 50px;">
