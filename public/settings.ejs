        a:not(.dropdown-content) {
            display: grid;
            /* margin: 16px 0; */

            /* height: 40px; */
            /* background-color: #f0f3f3; */
            border-radius: 20px;
            border: none;
            padding: 10px;
            font: bold;


            width: 70%;

            font-size: 18px;
