                        <!-- <button class="continue-button">Continue</button> -->
                    </div>

                    <div>
                        <label for="npasswd">Enter Your New Password:</label>
                        <input type="password" id="npasswd" name="npasswd">

                    </div>

                    <div>
                        <label for="repeatNpasswd">Repeat New Password:</label>
                        <input type="password" id="repeatNpasswd" name="repeatNpasswd">

                    </div>

                    <button type="submit">Change Password</button>
                </form>
            </div>



        </div>

        <!-- <div class="box-4" id="box-4">
            <h1>RESERVATIONS</h1>
        </div> -->
        <div class="box-4 hidden" , id="box-4">
