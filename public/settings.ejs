        </div>
        <!-- <div id="line"></div> -->
        <div class="dropdown">
            <% if (profilePicData) { %>
                <img src="data:<%= profilePicMimeType %>;base64,<%= profilePicData.toString('base64') %>" id="avatar"
                    alt="profile pic">
                <% } else { %>
                    <img src="avatar.jpg" id="avatar" alt="">
                    <% } %>

                        <button style="width:30px; margin-right: 47px;" class="dropdown-btn">
