        .box-1 button {
            position: relative;
            margin: auto;
            margin-top: 30px;
            margin-bottom: 20px;
        }

        .box-2 {
            background-image: linear-gradient(90deg,
                    rgb(180, 167, 141) 20%,
                    rgb(119, 95, 95));
            border: 2px solid rgb(7, 115, 151);
            border-radius: 20px;
            min-width: 65%;
