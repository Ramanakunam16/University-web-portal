    }

    .eye {
        position: absolute;
        top: 220px;
        right: 9%;
        width: 22px;
        cursor: pointer;
        /* display: none; */
    }

    .eye img {
        position: relative;
        width: 22px;
        /* transition: 0.3s ease-in-out */
    }



    input[type="checkbox"]:checked~.line {
        background-color: rgb(8, 3, 3);
        width: 110%;
        height: 2px;
        position: absolute;
        top: 37%;
        left: -6%;


        transform: rotate(60deg);
    }

    .btns {
        display: flex;
        justify-content: center;
        gap: 40px;

    }

    .facultybtn,
    .studentbtn {
        width: min-content;
        height: min-content;
        padding: 15px;
        font-size: 20px;
        margin-bottom: 20px;
        border: none;
    }

    .hidden {
        display: none;
    }

    .active {
        background-color: #0d8b8b;
    }


    @media (max-width: 900px) {

        .studentLoginForm,
        .facultyLoginForm {

            width: 80%;
        }



    }
</style>

</head>




